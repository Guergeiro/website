#!/bin/bash

(
  deno_version=$(deno --version)
  build_date=$(date)
  export DRASH_DOCS_BASE_URL=""

  webpack \
    --env.environment="development" \
    --env.deno_version="$deno_version" \
    --env.drash_base_url="$DRASH_DOCS_BASE_URL" \
    --env.build_date="$build_date" \
    --hide-modules \
    $@
)
